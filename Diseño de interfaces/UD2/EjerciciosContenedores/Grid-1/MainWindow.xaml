<Window x:Class="Grid_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"> </RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition> 
            <RowDefinition Height="28"></RowDefinition> 
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>

            <ColumnDefinition Width="Auto"></ColumnDefinition>

            <ColumnDefinition Width="*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>

        <Label Content="Nombre:" Grid.Row="0" Grid.Column="0"></Label>
        <Label Content="Correo:" Grid.Row="1" Grid.Column="0"></Label>
        <Label Content="Comentario:" Grid.Row="2" Grid.Column="0"></Label>



        <TextBox  Margin="3" FontSize="22" Grid.Row="0" Grid.Column="2"></TextBox>
        <TextBox  Margin="3" FontSize="22" Grid.Row="1" Grid.Column="2"></TextBox>
        <TextBox  Margin="3" FontSize="22" Grid.Row="2" Grid.Column="2"></TextBox>

        <Button Grid.Row="3" Grid.Column="2" Width="80px" Content="Enviar" Margin="3" HorizontalAlignment="Right"></Button>
        
        <GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Width="2px" Background="Red" Margin="3" 
                      ResizeBehavior="PreviousAndCurrent"></GridSplitter>

    </Grid>
</Window>
