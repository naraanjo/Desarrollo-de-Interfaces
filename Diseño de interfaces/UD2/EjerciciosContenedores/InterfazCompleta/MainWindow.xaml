<Window x:Class="InterfazCompleta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazCompleta"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">




    <StackPanel >

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

            <Label Content="Alvaro Naranjo´s Dashboard" FontSize="30"></Label>
            <Label Content="Alvaro Naranjo" FontSize="24"></Label>
            <Label Content="AlvaroNaranjo@example.com" FontSize="20"></Label>

        </StackPanel>



        <StackPanel Orientation="Horizontal" Background="AliceBlue">
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">

                    <!---Contenedor-1 a la izquierda-->
                    <Border BorderThickness="2" BorderBrush="Black" Width="300" Height="40" Margin="5,5,5,5">
                        <Label Content="Cerrar Sesión" HorizontalAlignment="Center"></Label>
                    </Border>
                
                    <!--Contenedor 2 de la izquierda-->
                    <Border BorderBrush="Black" BorderThickness="2" Width="300" Height="100" Margin="5,5,5,5">

                        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Label Content="Project" FontSize="20"></Label>
                            <Label Content="2" FontSize="30" HorizontalAlignment="Center"></Label>
                        </WrapPanel>
                    </Border>
                
                    <!--Contenedor 3 a la izquierda-->
                    <Border BorderBrush="Black" BorderThickness="2" Width="300" Height="100" Margin="5,5,5,5">

                        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Label Content="Project" FontSize="20"></Label>
                            <Label Content="2" FontSize="30" HorizontalAlignment="Center"></Label>
                        </WrapPanel>
                    </Border>
                
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" >

                <Border BorderThickness="2" BorderBrush="Black" Margin="5,5,5,5" Height="260" Width="180" HorizontalAlignment="Right">

                    <StackPanel>
                        <Label Content="Task" HorizontalAlignment="Center"></Label>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                   
                            </Grid.ColumnDefinitions>


                            <Label Content="ID" Grid.Row="0" Grid.Column="0"></Label>
                            <Label Content="Title" Grid.Row="0" Grid.Column="1"></Label>
                            <Label Content="Status" Grid.Row="0" Grid.Column="2"></Label>

                            <Label Content="ID" Grid.Row="1" Grid.Column="0"></Label>
                            <Label Content="Title" Grid.Row="1" Grid.Column="1"></Label>
                            <Label Content="Status" Grid.Row="1" Grid.Column="2"></Label>

                            <Label Content="ID" Grid.Row="2" Grid.Column="0"></Label>
                            <Label Content="Title" Grid.Row="2" Grid.Column="1"></Label>
                            <Label Content="Status" Grid.Row="2" Grid.Column="2"></Label>

                            <Label Content="ID" Grid.Row="3" Grid.Column="0"></Label>
                            <Label Content="Title" Grid.Row="3" Grid.Column="1"></Label>
                            <Label Content="Status" Grid.Row="3" Grid.Column="2"></Label>

                        </Grid>
                    </StackPanel>
                    
                </Border>
                
                
            </StackPanel>

        </StackPanel>




    
            <Label Grid.Row="0" Content="C Álvaro Naranjo" FontSize="20" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"></Label>


    </StackPanel>

</Window>
