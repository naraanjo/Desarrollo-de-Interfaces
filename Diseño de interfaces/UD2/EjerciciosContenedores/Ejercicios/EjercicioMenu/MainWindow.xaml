<Window x:Class="EjercicioMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjercicioMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
            </Grid.RowDefinitions>


            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2">
                <Label Content="Alvaro Naranjo" HorizontalAlignment="Center" ></Label>
            </Border>


            <Grid Grid.Row="1">

              

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>


                <Border BorderBrush="Black" BorderThickness="2" Grid.Column="0" Margin="4,4,4,4">

                        <!--<Menu izquierdo lateral-->
                        <Menu  Height="Auto" Width="Auto">

                            <!--Hace que se ponga el menu vertical-->
                            <Menu.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </Menu.ItemsPanel>
                            
                            
                            <MenuItem Header="_Archivo"></MenuItem>
                                <MenuItem Header="_Editar"></MenuItem>
                                <MenuItem Header="_Ver">
                                    <MenuItem Header="Opcion1" IsCheckable="True"></MenuItem>
                                    <MenuItem Header="Opcion2" IsCheckable="True"></MenuItem>
                                    <MenuItem Header="Opcion3" IsCheckable="True"></MenuItem>
                                    <MenuItem Header="OPcion4" IsCheckable="True"></MenuItem>
                                </MenuItem>
                                <MenuItem Header="_Compilar"></MenuItem>


                        </Menu>
                </Border>

                <Border BorderBrush="Black" BorderThickness="2" Grid.Column="1" Margin="4,4,4,4">

                    <StackPanel  Orientation="Vertical" >

                        <StackPanel Orientation="Vertical">
                            <Label Content="Vista de tareas" FontSize="22" Margin="5,18,0,0"></Label>
                            <Button Content="Agregar tarea" Width="120" Height="20" HorizontalAlignment="Left" Margin="10,8,0,0"></Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,8,0,0">

                          
                            <TextBox Width="200">Buscar tareas por título</TextBox>
                            <Button  Width="120" Height="20" Content="Buscar" Margin="10,0,0,0"></Button>
                            
                        </StackPanel>


                        <StackPanel Orientation="Horizontal" Margin="0,18,0,0">


                            <ComboBox Width="80" Margin="10,0,0,0">
                                <ComboBoxItem>Filtrar por fecha</ComboBoxItem>
                                <ComboBoxItem>Hoy</ComboBoxItem>
                                <ComboBoxItem>Esta semana</ComboBoxItem>
                                <ComboBoxItem>Este mes</ComboBoxItem>
                                <ComboBoxItem>Este año</ComboBoxItem>
                            </ComboBox>
                            <ComboBox Width="80" Margin="10,0,0,0">
                                <ComboBoxItem>Filtrar por fecha</ComboBoxItem>
                                <ComboBoxItem>Hoy</ComboBoxItem>
                                <ComboBoxItem>Esta semana</ComboBoxItem>
                                <ComboBoxItem>Este mes</ComboBoxItem>
                                <ComboBoxItem>Este año</ComboBoxItem>
                            </ComboBox>
                            <Button  Width="120" Height="20" Content="Ordenar" Margin="10,0,0,0"></Button>

                        </StackPanel>



                        <Grid Margin="5,60,0,6">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Label Content="Id" Grid.Row="0" Grid.Column="0"></Label>
                            <Label Content="Título" Grid.Row="0" Grid.Column="1"></Label>
                            <Label Content="Estado" Grid.Row="0" Grid.Column="2"></Label>
                            <Label Content="Fecha" Grid.Row="0" Grid.Column="3"></Label>

                            <Label Content="1" Grid.Row="1" Grid.Column="0"></Label>
                            <Label Content="Tarea Completada 2" Grid.Row="1" Grid.Column="1"></Label>
                            <Label Content="En progreso" Grid.Row="1" Grid.Column="2"></Label>
                            <Label Content="2024-12-12" Grid.Row="1" Grid.Column="3"></Label>


                            <Label Content="2" Grid.Row="2" Grid.Column="0"></Label>
                            <Label Content="Tarea completada 2" Grid.Row="2" Grid.Column="1"></Label>
                            <Label Content="Finalizada" Grid.Row="2" Grid.Column="2"></Label>
                            <Label Content="2024-12-13" Grid.Row="2" Grid.Column="3"></Label>


                            <Label Content="Id" Grid.Row="3" Grid.Column="0"></Label>
                            <Label Content="3" Grid.Row="3" Grid.Column="1"></Label>
                            <Label Content="Tarea completada 3" Grid.Row="3" Grid.Column="2"></Label>
                            <Label Content="2024-12-15" Grid.Row="3" Grid.Column="3"></Label>

                        </Grid>
                    </StackPanel>

                 
                </Border>
                
            </Grid>
            
        </Grid>


    </Grid>
</Window>
