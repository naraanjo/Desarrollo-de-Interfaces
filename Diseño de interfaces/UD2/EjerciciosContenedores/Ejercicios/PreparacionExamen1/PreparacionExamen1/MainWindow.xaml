<Window x:Class="PreparacionExamen1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreparacionExamen1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid>

        <!-- Defino el grid inicial-->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Saludo en la parte superior-->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <Label>Bienvenido ________</Label>
        </StackPanel>

        <!-- Pestaña de opciones-->
        <TabControl TabStripPlacement="Top" Grid.Row="1" >
            <TabItem Header="TabItem1"></TabItem>
            <TabItem Header="TabItem2"></TabItem>
        </TabControl>

        <!-- Grid de columnas -->
        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!-- Wrap para agrupar a todos los demas-->
            <WrapPanel Grid.Column="0" Orientation="Vertical">
                
                <!-- Wrap para cada label junto su textBox-->
                <WrapPanel Orientation="Horizontal" Margin="20,10,0,0">
                    <Label>Nombre</Label>
                    <TextBox Name="txBoxNombre" Width="120" Margin="10,0,0,0"></TextBox>
                </WrapPanel>
                
                <!-- Wrap para cada label junto su textBox-->
                <WrapPanel Orientation="Horizontal" Margin="20,10,0,0">
                    <Label>Apellido</Label>
                    <TextBox x:Name="txBoxApellido" Width="120"  Margin="10,0,0,0"></TextBox>
                </WrapPanel>
                
                <!-- Wrap para cada label junto su textBox-->
                <WrapPanel Orientation="Horizontal" Margin="20,10,0,0">
                    <Label>Edad</Label>
                    <TextBox x:Name="txBoxEdad"  Width="120" Margin="10,0,0,0"></TextBox>
                </WrapPanel>
                
                <!-- 4 botones con CRUD-->
                <WrapPanel Orientation="Vertical" Margin="10,10,0,0" HorizontalAlignment="Left">
                    <Button Content="Insertar" Margin="0,0,0,10" Click="Button_Click"></Button>
                    <Button Content="Eliminar" Margin="0,0,0,10" Click="Button_Click_3"></Button>
                    <Button Content="Actualizar" Margin="0,0,0,10" Click="Button_Click_1"></Button>
                    <Button Content="ConfirmarActualizar" Margin="0,0,0,10" Click="Button_Click_2"></Button>
                    <Button Content="Buscar" Margin="0,0,0,10"></Button>

                </WrapPanel>
                
                <!-- BORDE PAREA SIMULAR CUADRADO-->
                <Border BorderBrush="Black" BorderThickness="2" Height="70" Width="200" Margin="15,0,0,5">
                    <!-- Wrap para agrupar cada cuadrado-->
                    <WrapPanel Orientation="Horizontal">

                        <Border BorderBrush="AliceBlue" BorderThickness="3" Height="30" Width="70" Margin="3,3,3,3">
                            <Label Content="2"></Label>
                        </Border>


                        <Border BorderBrush="AliceBlue" BorderThickness="3" Height="30" Width="70" Margin="3,3,3,3">
                            <Label>Ejemplo 2</Label>
                        </Border>

                    </WrapPanel>
                </Border>
                
            </WrapPanel>
            
            <!-- Data Grid en la parte derecha de la pantalla-->
            <DataGrid Name="dtGridPersonas" Grid.Column="1" Margin="20,0,0,0" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding Apellidos}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Edad" Binding="{Binding Edad}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Stack para que ocupete todo, se estire-->
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <!--Menu lateral derecho-->
                <Menu Name="menu1"  VerticalAlignment="Top" >
                    <WrapPanel Orientation="Vertical">
                        <MenuItem Header="_Archivo" >
                            <MenuItem Header="A_brir" IsCheckable="true" />
                            <MenuItem Header="_Cerrar" IsCheckable="true" IsChecked="True" />
                            <MenuItem Header="_Guardar" >
                            </MenuItem>
                            <Separator />
                            <!-- Submenu-->
                            <MenuItem Header="Ag_regar" >
                                <MenuItem Header="Proyecto" />
                                <MenuItem Header="Archivo" />
                            </MenuItem>
                        </MenuItem>

                        <MenuItem Header="Inicio"></MenuItem>
                        <MenuItem Header="Ventana"></MenuItem>
                        <MenuItem Header="Ayuda"></MenuItem>
                        <MenuItem Header="Analizar"></MenuItem>

                    </WrapPanel>
                </Menu>

                <WrapPanel Grid.Column="2" HorizontalAlignment="Center" Orientation="Vertical">
                    <Button Content="Filtrar" Width="90" Height="20" Margin="0,20,0,0" Click="Button_Click_4"></Button>
                    <TextBox  Name="txtBuscarNombre" Margin="0,20,0,0"></TextBox>
                </WrapPanel>
                
            </StackPanel>
            
        </Grid>
        
        <!-- Footer donde hay binding para practicar-->
        <WrapPanel Orientation="Horizontal" Grid.Row="3" Margin="20,0,0,0">

            <ComboBox Name="ComboEjemplo">
                <ComboBoxItem>Ejemplo 1</ComboBoxItem>
                <ComboBoxItem>Ejemplo 2</ComboBoxItem>
                <ComboBoxItem>Ejemplo 3</ComboBoxItem>
            </ComboBox>

            <TextBox Margin="230,0,0,0"  Name="ValorDesplegable" Text="{Binding ElementName=ComboEjemplo, Path=SelectedItem.Content, Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"  Width="90"></TextBox>


            <TextBox Margin="30,0,0,0"  Name="Numero" Text="{Binding ElementName=SldNumero, Path=Value, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Width="90"></TextBox>

            <Slider x:Name="SldNumero" Width="100" Minimum="1" Maximum="100" Value="50" IsSnapToTickEnabled="True"></Slider>
        </WrapPanel>

    </Grid>
</Window>
