<Window x:Class="Elimiar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elimiar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">




    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        
        <!--Barra superior inicial-->
        <Label Grid.Row="0" Grid.Column="0" Content="Bienvenido usuario" HorizontalAlignment="Left" ></Label>
        <Button Grid.Row="0" Grid.Column="0" Content="Cerrar sesio" Height="20" Width="100" Foreground="Aqua" HorizontalAlignment="Right" ></Button>
        
        
        <!--Zona del medio-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <!--Barra del menu lateral-->
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="0">
                <Button  Margin ="0,10,0,0" Grid.Row="0" Grid.Column="0" Content="Cerrar sesio" Height="20" Width="100" Foreground="Aqua" HorizontalAlignment="Left" ></Button>
                <Button  Margin ="0,10,0,0" Grid.Row="0" Grid.Column="0" Content="Cerrar sesio" Height="20" Width="100" Foreground="Aqua" HorizontalAlignment="Left" ></Button>
                <Button  Margin ="0,10,0,0" Grid.Row="0" Grid.Column="0" Content="Cerrar sesio" Height="20" Width="100" Foreground="Aqua" HorizontalAlignment="Left" ></Button>
                <Button  Margin ="0,10,0,0" Grid.Row="0" Grid.Column="0" Content="Cerrar sesio" Height="20" Width="100" Foreground="Aqua" HorizontalAlignment="Left" ></Button>

            </StackPanel>
            
            <!--Parte rectangular bordead - 1-->
            <Border Grid.Column="1" Grid.Row="0" BorderBrush="Black" BorderThickness="2" Margin="5,5,5,5">

                <StackPanel Orientation="Horizontal">
                    
                    <!--Circulo-->
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Ellipse Width="80" Height="80" Fill="AliceBlue" HorizontalAlignment="Left" ></Ellipse>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <Label Content="Nombre: Alvaro Naranjo"></Label>
                        <Label Content="Correo: ÁlvaroNarajo@example.com"></Label>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--Parte rectangular bordead - 2-->
            <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="5,5,5,5">
                
                <!--<WrapPanel para agrupar las tareas-->
                <WrapPanel Orientation="Horizontal">
                    
                    <!--Tarea1-->
                    <Border BorderBrush="Black" BorderThickness="2"  Height="120" Width="150" Margin="4,4,4,4">
                        <Label Content="Tarea completada 1"></Label>
                    </Border>
                    
                    <!--Tarea-2-->
                    <Border BorderBrush="Black" BorderThickness="2" Height="120" Width="150" Margin="4,4,4,4">
                        <Label Content="Tarea completada 2"></Label>
                    </Border>
                    
                    <!--Tarea3-->
                    <Border BorderBrush="Black" BorderThickness="2" Width="150" Height="120" Margin="4,4,4,4">
                        <Label Content="Tarea completada 3"></Label>
                    </Border>
                </WrapPanel>
            </Border>

        </Grid>


        <!--Barra inferior-->
            <Label Background="AliceBlue" Content="2025C My application" Grid.Row="2" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" ></Label>

        
            
    </Grid>
</Window>
