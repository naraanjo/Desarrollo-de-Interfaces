<Window x:Class="EjercicioCompleto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel de Control de Usuario"
        Width="850" Height="550"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <!-- Panel principal -->
    <DockPanel LastChildFill="True">

        <!--  Barra superior  -->
        <DockPanel DockPanel.Dock="Top" Background="#0078D7" Height="35">
            
            <!--Boton alineado a la derecha usando dockPanel-->
            <Button DockPanel.Dock="Right"
                    Margin="5" Padding="10,0"
                    Content="Cerrar sesión"
                    Foreground="White" Background="#005A9E"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    FontWeight="Bold"/>

            <!--Boton alineado a la izquierda por defecto-->
            <Label VerticalAlignment="Center"
                   Margin="10,0"
                   Foreground="White"
                   FontWeight="Bold"
                   Content="Bienvenido, Usuario" />
            
        </DockPanel>

        <!-- Pie de página, empleado un nuevo dockPanel  -->
        <DockPanel DockPanel.Dock="Bottom" Background="#0078D7" Height="25">
            <TextBlock Text="© 2025 MiAplicación"
                       Foreground="White"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </DockPanel>

        <!--  Menú lateral izquierdo , usando stackpanel, y posicionando respecto al dockPanel -->
        <StackPanel DockPanel.Dock="Left"
                    Background="#E6EEF8"
                    Width="130">
            
            <!-- Elemento en bloque uno debajo del otro-->
            <Button Content="Inicio" Margin="10,10,10,0" Height="30"/>
            <Button Content="Perfil" Margin="10,10,10,0" Height="30"/>
            <Button Content="Configuración" Margin="10,10,10,0" Height="30"/>
            <Button Content="Ayuda" Margin="10,10,10,0" Height="30"/>
            
        </StackPanel>

        <!--  Contenido principal  -->
        <Grid Margin="10">
            
            <Grid.RowDefinitions>
                
                <RowDefinition Height="Auto"/>
                
                <!-- Información del usuario -->
                <RowDefinition Height="*"/>
                
                <!-- Sección de tareas -->
            </Grid.RowDefinitions>

            <!--  Información del usuario - borde  -->
            <Border Grid.Row="0"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0,0,0,10"
                    Background="White">
                
                <!--<DockPanel con los datos del usuario-->
                <DockPanel>
                    
                    <!--Dibujo circular-->
                    <Ellipse Width="80"
                             Height="80"
                             Fill="#DDD"
                             Margin="10"
                             DockPanel.Dock="Left"/>

                    <!-- Apila los objetos de forma vertical, de forma proporcionada -->
                    <StackPanel Margin="10,0,0,0">
                    
                        <TextBlock FontWeight="Bold" FontSize="14">
                            <Run Text="Nombre: "/><Run Text="Juan Pérez"/>
                        </TextBlock>
                        
                        <TextBlock>
                            <Run Text="Correo: "/><Run Text="juanperez@example.com"/>
                        </TextBlock>
                        
                    </StackPanel>
                    
                    
                </DockPanel>
                
                
            </Border>

            <!--  Sección de tareas - Borde -->
            <Border Grid.Row="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="10"
                    Background="White">
                
                <!-- Apila los elementos de forma central y arriba-->
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    
                    <!-- Tarea 1 - borde -->
                    <Border BorderBrush="#0078D7"
                            BorderThickness="1"
                            Width="200" Height="100"
                            Margin="10"
                            Background="#F9F9F9">
                        
                        <!--Tarea-->
                        <TextBlock Text="Tarea completada 1"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Tarea 2 -->
                    <Border BorderBrush="#0078D7"
                            BorderThickness="1"
                            Width="200" Height="100"
                            Margin="10"
                            Background="#F9F9F9">
                        <TextBlock Text="Tarea completada 2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Tarea 3 -->
                    <Border BorderBrush="#0078D7"
                            BorderThickness="1"
                            Width="200" Height="100"
                            Margin="10"
                            Background="#F9F9F9">
                        <TextBlock Text="Tarea completada 3"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Tarea 4 -->
                    <Border BorderBrush="#0078D7"
                            BorderThickness="1"
                            Width="200" Height="100"
                            Margin="10"
                            Background="#F9F9F9">
                        <TextBlock Text="Tarea completada 4"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </WrapPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
