<Window x:Class="RectanguloBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RectanguloBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="300" MinWidth="300">




      

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>


            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            
        </Grid.ColumnDefinitions>

            <WrapPanel Grid.Column="1" VerticalAlignment="Bottom">
                <Rectangle Width="{Binding ElementName=Anchura, Path=Value, Mode=OneWay}"
                           Height="{Binding ElementName=Altura, Path=Value, Mode=OneWay}" Fill="Blue" 
                           Opacity="{Binding ElementName=Opacidad, Path=Value, Mode=OneWay}"/>
            </WrapPanel>
            
            
            <WrapPanel  Orientation="Vertical" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Slider HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="Altura" Width="150" Margin="0,20,0,0" Orientation="Vertical" Height="100" Minimum="10" Maximum="100"></Slider>
                <Label Content="Altura"></Label>

            </WrapPanel>

            <WrapPanel HorizontalAlignment="Left"  Orientation="Vertical" Margin="0,50,0,0" Grid.Column="1" Grid.Row="1">
                <Slider Name="Opacidad" Width="100" Margin="0,20,0,0" Minimum="0" Maximum="1"></Slider>
                <Label Content="Opacidad"></Label>

                <Slider  Name="Anchura" Width="100" Margin="0,20,0,0" Minimum="10" Maximum="100"></Slider>
                <Label Content="Ancchura"></Label>
            </WrapPanel>
        </Grid>
        
        
</Window>
