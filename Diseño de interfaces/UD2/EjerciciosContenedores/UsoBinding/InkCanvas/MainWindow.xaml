<Window x:Class="InkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Background="Yellow">
            <InkCanvas Name="inkPizarra" Height="400" Width="250" VerticalAlignment="Top" HorizontalAlignment="Center"></InkCanvas>
            <WrapPanel HorizontalAlignment="Center" Margin="0,30,0,0"> </WrapPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
