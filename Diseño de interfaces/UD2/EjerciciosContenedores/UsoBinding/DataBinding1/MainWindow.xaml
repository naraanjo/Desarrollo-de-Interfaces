<Window x:Class="DataBinding1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        
        <Slider Name="MiSlide"
                Minimum="10"
                Maximum="40"
                Width="200"
                TickFrequency="1"
                IsSnapToTickEnabled="True"/>

        
        <TextBox Name="Frase"
            Text="Esto es un ejemplo"
                   FontSize="{Binding ElementName=MiSlide, Path=Value, Mode=OneWay}"
                   HorizontalAlignment="Center"
                   Margin="10"
                 Foreground="{Binding ElementName=Colores, Path=SelectedItem.Content, Mode=OneWay}"
                 FontFamily="{Binding ElementName=Estilo, Path=SelectedItem.Content, Mode=OneWay}"/>

        
        <TextBox Name="Edad" Text="{Binding ElementName=Frase, Path=FontSize, Mode=TwoWay}"> </TextBox>


        <Button Name="btnPequeño" Width="80" Height="20" Click="btnPequeño_Click" Content="Pequeño"></Button>
        <Button Name="btnMediano" Width="80" Height="20" Click="btnMediano_Click" Content="Mediano"></Button>
        <Button Name="btnGrande" Width="80" Height="20" Click="btnGrande_Click" Content="Grande"></Button>


        <ListBox Name="Colores">
            <ListBoxItem Content="Green"></ListBoxItem>
            <ListBoxItem Content="Blue"></ListBoxItem>
            <ListBoxItem Content="Red"></ListBoxItem>
            <ListBoxItem Content="Black"></ListBoxItem>
        </ListBox>


        <ComboBox Name="Estilo" ItemsSource="{x:Static Fonts.SystemFontFamilies}">

        </ComboBox>

        <ComboBox Name="Ciudades">
            <ComboBoxItem Content="Córdoba"></ComboBoxItem>
            <ComboBoxItem Content="Sevilla"></ComboBoxItem>
            <ComboBoxItem Content="Malta"></ComboBoxItem>
            <ComboBoxItem Content="Alemania"></ComboBoxItem>

        </ComboBox>

        <TextBox Text="{Binding ElementName=Ciudades, Path=SelectedItem.Content, Mode=OneWay}"></TextBox>


    </StackPanel>

</Window>
