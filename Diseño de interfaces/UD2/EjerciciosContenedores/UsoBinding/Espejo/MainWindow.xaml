<Window x:Class="Espejo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Espejo"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Grupo 1 -->
            <WrapPanel Orientation="Horizontal" Margin="3">
                <RadioButton x:Name="Opcion1" GroupName="grupo1" Content="Opcion 1" Margin="3"/>
                <CheckBox x:Name="Check1" Content="Opcion 4" Margin="3"/>
                <TextBox x:Name="Text1" Margin="3" Width="80"/>
            </WrapPanel>

            <WrapPanel Orientation="Horizontal" Margin="3">
                <RadioButton x:Name="Opcion2" GroupName="grupo1" Content="Opcion 2" Margin="3"/>
                <CheckBox x:Name="Check2" Content="Opcion 5" Margin="3"/>
                <ComboBox x:Name="Combo1" Margin="3" Width="80" SelectedIndex="0">
                    <ComboBoxItem>Item 1</ComboBoxItem>
                    <ComboBoxItem>Item 2</ComboBoxItem>
                    <ComboBoxItem>Item 3</ComboBoxItem>
                </ComboBox>
            </WrapPanel>

            <WrapPanel Orientation="Horizontal" Margin="3">
                <RadioButton x:Name="Opcion3" GroupName="grupo1" Content="Opcion 3" Margin="3"/>
                <CheckBox x:Name="Check3" Content="Opcion 6" Margin="3"/>
                <xctk:IntegerUpDown x:Name="Num1" Margin="3" Width="80" Minimum="0" Maximum="100"/>
            </WrapPanel>

            <Separator Margin="0,10,0,10"/>

            <!-- Grupo 2 - espejo solo lectura -->
            <WrapPanel Orientation="Horizontal" Margin="3">
                <RadioButton GroupName="grupo2" Content="Opcion 1"
                             IsChecked="{Binding ElementName=Opcion1, Path=IsChecked, Mode=TwoWay}" 
                             IsEnabled="False" Margin="3"/>
                <CheckBox Content="Opcion 4"
                          IsChecked="{Binding ElementName=Check1, Path=IsChecked, Mode=TwoWay}" 
                          IsEnabled="False" Margin="3"/>
                <TextBox Text="{Binding ElementName=Text1, Path=Text, Mode=TwoWay}" 
                         IsReadOnly="True" Margin="3" Width="80"/>
            </WrapPanel>

            <WrapPanel Orientation="Horizontal" Margin="3">
                <RadioButton GroupName="grupo2" Content="Opcion 2"
                             IsChecked="{Binding ElementName=Opcion2, Path=IsChecked, Mode=TwoWay}" 
                             IsEnabled="False" Margin="3"/>
                <CheckBox Content="Opcion 5"
                          IsChecked="{Binding ElementName=Check2, Path=IsChecked, Mode=TwoWay}" 
                          IsEnabled="False" Margin="3"/>
                <ComboBox SelectedIndex="{Binding ElementName=Combo1, Path=SelectedIndex, Mode=TwoWay}" 
                          IsEnabled="False" Margin="3" Width="80">

                    <ComboBoxItem Content="Item 1"></ComboBoxItem>
                    <ComboBoxItem Content="Item 2"></ComboBoxItem>

                </ComboBox>
            </WrapPanel>

            <WrapPanel Orientation="Horizontal" Margin="3">
                <RadioButton GroupName="grupo2" Content="Opcion 3"
                             IsChecked="{Binding ElementName=Opcion3, Path=IsChecked, Mode=TwoWay}" 
                             IsEnabled="False" Margin="3"/>
                <CheckBox Content="Opcion 6"
                          IsChecked="{Binding ElementName=Check3, Path=IsChecked, Mode=TwoWay}" 
                          IsEnabled="False" Margin="3"/>
                <xctk:IntegerUpDown Value="{Binding ElementName=Num1, Path=Value, Mode=TwoWay}" 
                                    IsEnabled="False" Margin="3" Width="80" Minimum="0" Maximum="100"/>
            </WrapPanel>

        </WrapPanel>
    </ScrollViewer>
</Window>
