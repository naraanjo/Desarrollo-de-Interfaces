<Window x:Class="DataBinding2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <!--DockPanel principal-->
    <DockPanel LastChildFill="True">


        <Border DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="1" Margin="4,4,4,4">
            <!--DockPanel superior (barra superior)-->
            <DockPanel  LastChildFill="True">
                <Button DockPanel.Dock="Left" Width="80" Height="20"></Button>
                <Button DockPanel.Dock="Right" Width="80" Height="20"></Button>
                <Label HorizontalAlignment="Center">Probando biding y cotenedores</Label>
            </DockPanel>
        </Border>
       
        
        <!--DockPanel inferior (barra inferior)-->
        <Border  DockPanel.Dock="Bottom" BorderThickness="1" BorderBrush="Black" Margin="4,4,4,4" >
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">Álvaro Narajo</Label>
        </Border>
        
        <!--Barra de botones (parte izquierda de la pantalla)-->
        <Border DockPanel.Dock="Left" BorderThickness="1" BorderBrush="Black" Margin="4,4,4,4">

            <!--<WrapPanel: Orientacion uno debajo del otro-->
                <WrapPanel Orientation="Vertical">
                    <Button Margin="4,4,4,4" Width="80" Height="20" Content="Opcion1"></Button>
                    <Button Margin="4,4,4,4" Width="80" Height="20" Content="Opcion2"></Button>
                    <Button Margin="4,4,4,4" Width="80" Height="20" Content="Opcion3"></Button>
                    <Button Margin="4,4,4,4" Width="80" Height="20" Content="Opcion4"></Button>
                </WrapPanel>
                
        </Border>
        
        
        <!--Menu lateral derecho-->
        <Border DockPanel.Dock="Right" BorderThickness="1" BorderBrush="Black" Margin="4,4,4,4">
            
            <!--<Menu principal-->
            <Menu Height="Auto" Width="Auto">
                
                <!--Orientacio vertical para los elementos del menu-->
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"></StackPanel>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <!--Elemetos del menu-->
                <MenuItem Header="Opcion1"></MenuItem>
                <MenuItem Header="Opcion2">
                    <!--Submenu-->
                    <MenuItem Header="Opcion2.1" IsCheckable="True"></MenuItem>
                    <MenuItem Header="Opcion2.2" IsCheckable="True"></MenuItem>
                    <MenuItem Header="Opcion2.3" IsCheckable="True"></MenuItem>
                    <MenuItem Header="Opcion2.4" IsCheckable="True"></MenuItem>

                </MenuItem>
                <MenuItem Header="Opcion3"></MenuItem>
                <MenuItem Header="Opcion4"></MenuItem>
                <MenuItem Header="Opcion5"></MenuItem>
                <MenuItem Header="Opcion6"></MenuItem>

            </Menu>
        </Border>


        <!--Ultimo elemento del DockPanel | Ocupa espacio restante-->
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Border BorderBrush="{Binding ElementName=CmbxColores, Path=SelectedItem.Content, Mode=OneWay}" BorderThickness="1" Grid.Row="0" Margin="4,4,4,4">
                
                <StackPanel Orientation="Horizontal">
                    
                    <!--Lista relacionada con el TextBox Pais-->
                    <ListBox Name="ListaPaises">
                        <ListBoxItem Content="España"></ListBoxItem>
                        <ListBoxItem Content="Francia"></ListBoxItem>
                        <ListBoxItem Content="Suiza"></ListBoxItem>
                        <ListBoxItem Content="Alemania"></ListBoxItem>
                    </ListBox>

                    <TextBox Text="{Binding ElementName=ListaPaises, Path=SelectedItem.Content, Mode=OneWay}" Name="PaisSeleccionado" Width="120" Height="20" Margin="10,0,0,0"  VerticalAlignment="Center"></TextBox>
                </StackPanel>
                
            </Border>


            <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Margin="4,4,4,4">
                
                <StackPanel Grid.Row="1" >

                    <!--Agrupa a los elementos segun el tamaño de la pantalla-->
                    <WrapPanel Orientation="Horizontal">

                        <!--Simulacion tarea1-->
                        <Border BorderBrush= "{Binding ElementName=CmbxColores, Path=SelectedItem.Content, Mode=OneWay}" BorderThickness="2">
                            <Label Content="Tarea 1 Completada" Height="60" Width="100"></Label>
                        </Border>

                        <!--Simulacion tarea2-->
                        <Border BorderBrush = "{Binding ElementName=CmbxColores, Path=SelectedItem.Content, Mode=OneWay}" BorderThickness="2">
                            <Label Content="Tarea 2 Completada" Height="60" Width="100"></Label>
                        </Border>
                        
                        <!--Simulacion tarea3-->
                        <Border BorderBrush="{Binding ElementName=CmbxColores, Path=SelectedItem.Content, Mode=OneWay}" BorderThickness="2">
                            <Label Content="Tarea 3 Completada" Height="60" Width="100"></Label>
                        </Border>

                        <!--Desplegable con colores para cambiar el color de borde de las tareas-->
                        <ComboBox Name="CmbxColores" Height="20" Width="100" Margin="5,0,0,0">
                            <ComboBoxItem Content="Green"></ComboBoxItem>
                            <ComboBoxItem Content="Red"></ComboBoxItem>
                            <ComboBoxItem Content="Blue"></ComboBoxItem>
                            <ComboBoxItem Content="Orange"></ComboBoxItem>
                        </ComboBox>
                        
                        
                    </WrapPanel>
                </StackPanel>
       
            </Border>
        </Grid>
        
        
    </DockPanel>
</Window>
