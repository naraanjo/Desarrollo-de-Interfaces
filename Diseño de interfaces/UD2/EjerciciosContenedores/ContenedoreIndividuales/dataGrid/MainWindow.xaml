<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        
        <!-- Primera fila y columna -->
        <WrapPanel Orientation="Vertical"  Grid.Column="0" Grid.Row="0">

            <Label>Nombre</Label>
            <TextBox Name="txtNombre" ></TextBox>

            <Label Margin="0,20,0,0">Apellidos:</Label>
            <TextBox Name="txtApellido" ></TextBox>
            
            <Label Margin="0,20,0,0">Edad:</Label>
            <TextBox Name="txtEdad"></TextBox>

            <Button Name="btnAgregar" Margin="0,40,0,0" Height="20" Width="80" Click="btnAgregar_Click">Agregar persona</Button>


        </WrapPanel>

        <!--Parte inferior-->
        <WrapPanel Orientation="Horizontal" Grid.Row="1">
            <Button Height="20" Width="80" Click="Button_Click">Eliminar</Button>
            <Button Height="20" Width="80" Click="Button_Click_1">Modificar</Button>
            <Button x:Name="btnActualizarConfirmar" Height="20" Width="80" Click="Button_actualizarConfirmar" IsEnabled="False">Confirmar</Button>
        </WrapPanel>

        <!-- Parte de la derecha-->
        <WrapPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
         
            <DataGrid Name="dvgPersonas" AutoGenerateColumns="False" Height="350" Width="480" Margin="0,20,20,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding Apellidos}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Edad" Binding="{Binding Edad}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            
        </WrapPanel>
        
        
    </Grid>
    
    
</Window>
