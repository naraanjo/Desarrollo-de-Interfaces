<Window x:Class="ReplicarIterfaz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReplicarIterfaz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <!--Cotenedor principal-->
    <DockPanel Background="Azure" LastChildFill="True">


        <!--Posicion de este dockPanel (Top), referencia al padre-->
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top"  Height="40">

            <Label Content="Bievenido" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
            <Button Content="Enviar" Height="20" Width="120" DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Right"
                Background="White" Foreground="Blue"  MinWidth="120"></Button>
        </DockPanel>


        <DockPanel DockPanel.Dock="Bottom">

            <Label Content="Alvaro Naranjo C" HorizontalAlignment="Center" VerticalAlignment="Stretch"></Label>

        </DockPanel>

        <!--Respecto al padre - izquierda-->
        
        <DockPanel DockPanel.Dock="Left" HorizontalAlignment="Left" Background="Bisque" Width="140">

            <!---Aqui se usa StackPael, para poer uo debajo del otro | Vertical-->
            <!--Uso principal: aliear orietacion de elemetos hijos-->
            <StackPanel Orientation="Vertical">

                <Button Content="Inicio" Width="120" Height="20" Margin="0,15,0,15"></Button>
                <Button Content="Perfil" Width="120" Height="20" Margin="0,0,0,15"></Button>
                <Button Content="Configuración" Width="120" Height="20" Margin="0,0,0,15"></Button>
                <Button Content="Ayuda" Width="120" Height="20" Margin="0,0,0,15"></Button>
                
            </StackPanel>
            
        </DockPanel>


        
        
        
        <!--DockPanel de la derecha-->
        <DockPanel Background="BlueViolet" LastChildFill="True" DockPanel.Dock="Right">
            
            <!--Otro dockPanel - orientacion arriba-->
            <DockPanel DockPanel.Dock="Top" Height="150">
                <!--Borde-->
                <Border BorderBrush="Black" BorderThickness="2" Background="LightGray" CornerRadius="5" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="120*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Ellipse Panel.ZIndex="2" Fill="Gainsboro" Width="80" Height="80" Grid.Row="0" Grid.Column="0"></Ellipse>
                        
                        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1" >
                            <Label Content="Nombre: Jua Pérez" Foreground="Black" ></Label>
                            <Label Content="Correo: juanperez@example.com" ></Label>
                        </StackPanel>
                        
                    </Grid>
                </Border>

            </DockPanel>
            
            <!--Otro pero ahora abajo-->
            <DockPanel DockPanel.Dock="Bottom" >

                <Border BorderBrush="Red" BorderThickness="2" Background="LightCoral" CornerRadius="5" Margin="5">

                    <WrapPanel Orientation="Horizontal">
                        
                        <!--Aqui simulo cada cuadrado con bordes-->
                        <Border BorderBrush="Black" BorderThickness="2" Background="LightCoral" CornerRadius="5" Margin="5">

                            <Label Content="Tarea-1 completada" Height="90" Width="90"></Label>
                        </Border>

                        <Border BorderBrush="Black" BorderThickness="2" Background="LightCoral" CornerRadius="5" Margin="5">

                            <Label Content="Tarea-2 completada" Height="90" Width="90"></Label>
                        </Border>

                        <Border BorderBrush="Black" BorderThickness="2" Background="LightCoral" CornerRadius="5" Margin="5">

                            <Label Content="Tarea-3 completada" Height="90" Width="90"></Label>
                        </Border>

                    </WrapPanel>

                </Border>
            </DockPanel>
            
        </DockPanel>




        
    </DockPanel>
</Window>
